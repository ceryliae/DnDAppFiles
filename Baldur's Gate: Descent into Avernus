	<monster>
		<name>Tormentor</name>
		<size>H</size>
		<type>Vehicle (3,000 lb.) Baldur's Gate: Descent into Avernus</type>
		<alignment>none</alignment>
		<ac>21 (19 while motionless)</ac>
		<hp>60 (damage threshold 10, mishap threshold 20)</hp>
		<speed>110 ft.</speed>
		<str>16</str>
		<dex>14</dex>
		<con>14</con>
		<int>0</int>
		<wis>0</wis>
		<cha>0</cha>
		<save></save>
		<skill></skill>
		<resist></resist>
		<vulnerable></vulnerable>
		<immune>fire, poison, psychic</immune>
