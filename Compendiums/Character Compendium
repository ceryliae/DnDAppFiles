		<autolevel level="4"> <slots>0,3,0,0,0,0</slots></autolevel>
		<autolevel level="5"> <slots>0,4,2,0,0,0</slots></autolevel>
		<autolevel level="6"> <slots>0,4,2,0,0,0</slots></autolevel>
