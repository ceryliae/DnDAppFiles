		<autolevel level="15"><slots>4,4,3,3,2,0</slots></autolevel>
		<autolevel level="16"><slots>4,4,3,3,2,0</slots></autolevel>
		<autolevel level="17"><slots>4,4,3,3,3,1</slots></autolevel>
		<autolevel level="18"><slots>4,4,3,3,3,1</slots></autolevel>
